<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/backgroundWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- COPD Fuel Header (green background) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/lightGreen"
            android:paddingTop="24dp"
            android:paddingBottom="16dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COPD"
                    android:textSize="28sp"
                    android:textStyle="bold|italic"
                    android:textColor="@color/colorOrange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Fuel"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Hero Section (light blue background - matches web) -->
        <LinearLayout
            android:id="@+id/hero_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/backgroundBlue"
            android:paddingVertical="48dp"
            android:paddingHorizontal="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/hero_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Breathe Easier with Better Nutrition"
                android:textSize="32sp"
                android:textStyle="bold|italic"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:id="@+id/hero_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personalized dietary guidance for managing COPD and improving your quality of life through proper nutrition."
                android:textSize="18sp"
                android:textColor="@color/textSecondary"
                android:gravity="center"
                android:layout_marginBottom="32dp"
                android:lineSpacingExtra="4dp" />

            <Button
                android:id="@+id/explore_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore Guidelines"
                android:textColor="@color/textWhite"
                android:backgroundTint="@color/colorPrimary"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Understanding COPD Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/backgroundWhite"
            android:padding="48dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="48dp">

                <TextView
                    android:id="@+id/section_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Understanding COPD"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/section_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Learn about Chronic Obstructive Pulmonary Disease and its impact on health."
                    android:textSize="18sp"
                    android:textColor="@color/textTertiary"
                    android:gravity="center"
                    android:maxWidth="600dp"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

            <!-- What is COPD Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="@color/cardBackgroundBlue"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/copd_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What is COPD?"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/copd_text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="COPD description"
                        android:textSize="16sp"
                        android:textColor="@color/textSecondary"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/copd_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="COPD statistics"
                        android:textSize="16sp"
                        android:textColor="@color/textSecondary"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="24dp" />

                    <!-- COPD Image -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <ImageView
                            android:id="@+id/copd_image"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/healthy_vs_copd_lungs"
                            android:contentDescription="Healthy vs COPD lungs illustration" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Common Symptoms Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="@color/cardBackgroundBlue"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/symptoms_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Common Symptoms"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:id="@+id/symptoms_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Risk Factors Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="@color/cardBackgroundBlue"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/risk_factors_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Risk Factors"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/risk_factors_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Smoking, exposure to air pollution, genetics, and occupational dust or chemicals can increase the risk of developing COPD."
                        android:textSize="16sp"
                        android:textColor="@color/textSecondary"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- When to See a Doctor Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/cardBackgroundBlue"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/see_doctor_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="When to See a Doctor"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/see_doctor_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="See your doctor if you have persistent cough, shortness of breath, wheezing, or frequent respiratory infections. Early diagnosis and treatment can help manage COPD effectively."
                        android:textSize="16sp"
                        android:textColor="@color/textSecondary"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Footer Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/backgroundDark"
            android:padding="48dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COPD Fuel"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/textWhite"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Helping you breathe easier with personalized nutritional guidance tailored for COPD management."
                    android:textSize="16sp"
                    android:textColor="#d1d5db"
                    android:gravity="center"
                    android:maxWidth="600dp"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/borderGray"
                android:layout_marginTop="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(c) 2024 COPD Fuel. All rights reserved. The information provided is not medical advice."
                android:textSize="14sp"
                android:textColor="#9ca3af"
                android:gravity="center"
                android:layout_marginTop="24dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
