<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meal Category"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/meal_category_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Database Source Toggle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Food Database"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/database_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <RadioButton
                android:id="@+id/radio_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Local (18,563 foods)"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radio_usda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USDA Online"
                android:layout_marginStart="16dp" />

        </RadioGroup>

        <!-- Food Category Filter (for local database) -->
        <LinearLayout
            android:id="@+id/category_filter_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filter by Category (optional)"
                android:textSize="12sp"
                android:textColor="#6b7280"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/category_filter_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Search Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/food_search_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="e.g., chicken breast, apple"
                android:inputType="text"
                android:imeOptions="actionSearch" />

            <Button
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Search Results -->
        <TextView
            android:id="@+id/search_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search for foods from the database"
            android:textSize="12sp"
            android:textColor="#6b7280"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_results_list"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:nestedScrollingEnabled="true"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            android:background="#f9fafb" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e7eb"
            android:layout_marginVertical="8dp" />

        <TextView
            android:id="@+id/selected_food_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food Details"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1f2937"
            android:layout_marginBottom="12dp" />

        <!-- Food Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food Name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/food_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter food name"
            android:inputType="text"
            android:layout_marginBottom="12dp" />

        <!-- Amount Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/amount_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="1"
                    android:text="1"
                    android:inputType="numberDecimal"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Serving Size"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/serving_size_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown" />

            </LinearLayout>

        </LinearLayout>

        <!-- Nutrition Summary Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="#f0fdf4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nutrition (per serving)"
                    android:textSize="12sp"
                    android:textColor="#6b7280"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Calories -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calories"
                            android:textSize="11sp"
                            android:textColor="#6b7280" />

                        <TextView
                            android:id="@+id/nutrition_calories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1f2937" />

                    </LinearLayout>

                    <!-- Protein -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Protein"
                            android:textSize="11sp"
                            android:textColor="#6b7280" />

                        <TextView
                            android:id="@+id/nutrition_protein"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0g"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#22c55e" />

                    </LinearLayout>

                    <!-- Carbs -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carbs"
                            android:textSize="11sp"
                            android:textColor="#6b7280" />

                        <TextView
                            android:id="@+id/nutrition_carbs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0g"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#f97316" />

                    </LinearLayout>

                    <!-- Fat -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fat"
                            android:textSize="11sp"
                            android:textColor="#6b7280" />

                        <TextView
                            android:id="@+id/nutrition_fat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0g"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#ef4444" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Manual Entry Section (collapsed by default) -->
        <LinearLayout
            android:id="@+id/manual_entry_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Or edit nutrition manually:"
                android:textSize="12sp"
                android:textColor="#6b7280"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Calories"
                        android:textSize="12sp"
                        android:textColor="#6b7280" />

                    <EditText
                        android:id="@+id/calories_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0"
                        android:inputType="numberDecimal"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Protein (g)"
                        android:textSize="12sp"
                        android:textColor="#6b7280" />

                    <EditText
                        android:id="@+id/protein_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0"
                        android:inputType="numberDecimal"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Carbs (g)"
                        android:textSize="12sp"
                        android:textColor="#6b7280" />

                    <EditText
                        android:id="@+id/carbs_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0"
                        android:inputType="numberDecimal"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fat (g)"
                        android:textSize="12sp"
                        android:textColor="#6b7280" />

                    <EditText
                        android:id="@+id/fat_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0"
                        android:inputType="numberDecimal"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Toggle Manual Entry Button -->
        <Button
            android:id="@+id/toggle_manual_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Nutrition Manually"
            android:textSize="12sp"
            android:background="@android:color/transparent"
            android:textColor="#2563eb"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />

        <!-- Save as favorite (for quick add later) -->
        <Button
            android:id="@+id/save_as_favorite_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save as favorite (quick add later)"
            android:textSize="13sp"
            android:backgroundTint="#6b7280"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/add_to_database_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to database (searchable next time)"
            android:textSize="13sp"
            android:backgroundTint="#059669"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
