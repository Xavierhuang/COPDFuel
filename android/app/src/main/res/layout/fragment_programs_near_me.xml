<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundGray">

    <!-- Header with back button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/backgroundWhite"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Find Programs Near Me"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:gravity="center"
            android:paddingEnd="40dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/backgroundWhite"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pulmonary Rehabilitation Programs"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find programs near you to help manage your COPD"
                    android:textSize="16sp"
                    android:textColor="@color/textSecondary"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Location Options Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/backgroundWhite"
                android:padding="20dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Your Location"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center" />

                <!-- Use Current Location Option -->
                <LinearLayout
                    android:id="@+id/current_location_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@drawable/location_option_background"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_location"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Use Current Location"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary" />

                        <TextView
                            android:id="@+id/location_status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap to get your current location"
                            android:textSize="14sp"
                            android:textColor="@color/textSecondary" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/location_check"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check"
                        android:visibility="gone"
                        app:tint="@color/colorSuccess" />
                </LinearLayout>

                <!-- Search by Address Option -->
                <LinearLayout
                    android:id="@+id/search_address_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@drawable/location_option_background"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_search"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Search by Address"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary" />

                        <TextView
                            android:id="@+id/address_status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter any city, state, or address"
                            android:textSize="14sp"
                            android:textColor="@color/textSecondary" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/address_check"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check"
                        android:visibility="gone"
                        app:tint="@color/colorSuccess" />
                </LinearLayout>

                <!-- Manual Location Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/lightYellow"
                    android:padding="16dp"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/manual_location_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter city, state, or address..."
                        android:background="@drawable/input_background"
                        android:padding="12dp"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:layout_marginEnd="12dp" />

                    <Button
                        android:id="@+id/search_location_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search"
                        android:textColor="@color/textWhite"
                        android:backgroundTint="@color/colorAccent" />
                </LinearLayout>

                <!-- Location Status -->
                <LinearLayout
                    android:id="@+id/location_status_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/lightBlue"
                    android:padding="16dp"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:id="@+id/status_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/location_permission_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location permission granted"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>
            </LinearLayout>

            <!-- Search Filter -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/backgroundWhite"
                android:padding="20dp"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/search_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search by name, city, or specialty..."
                    android:background="@drawable/input_background"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:drawableStart="@drawable/ic_search"
                    android:drawablePadding="12dp" />
            </LinearLayout>

            <!-- Loading Indicator -->
            <LinearLayout
                android:id="@+id/loading_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="40dp"
                android:background="@color/backgroundWhite"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <ProgressBar
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:indeterminateTint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Searching for programs near you..."
                    android:textSize="16sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <!-- Results Count -->
            <LinearLayout
                android:id="@+id/results_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:background="@color/backgroundGray">

                <TextView
                    android:id="@+id/results_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 programs found"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/textSecondary" />
            </LinearLayout>

            <!-- Programs List -->
            <LinearLayout
                android:id="@+id/programs_list_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp" />

            <!-- No Results Message -->
            <LinearLayout
                android:id="@+id/no_results_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="40dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No programs found."
                    android:textSize="18sp"
                    android:textColor="@color/textSecondary"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Try adjusting your search terms."
                    android:textSize="16sp"
                    android:textColor="@color/textTertiary"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/show_sample_data_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show Sample Data"
                    android:textColor="@color/textWhite"
                    android:backgroundTint="@color/colorError"
                    android:layout_marginTop="16dp" />
            </LinearLayout>

            <!-- Footer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/backgroundGray"
                android:padding="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Don't see a program near you? Contact your healthcare provider for recommendations."
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
