<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/hipaa_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hipaa_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/hipaa_full_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hipaa_full_text"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorPrimary"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginBottom="20dp" />

        <CheckBox
            android:id="@+id/hipaa_agree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hipaa_i_agree"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/hipaa_printed_name_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hipaa_printed_name_hint"
            app:boxStrokeColor="?attr/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/hipaa_printed_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/hipaa_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/hipaa_date_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/hipaa_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorError"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/hipaa_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hipaa_submit"
            android:visibility="visible"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/hipaa_revoke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hipaa_revoke"
            android:visibility="gone"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
