<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/backgroundWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Main Guidelines Section -->
        <LinearLayout
            android:id="@+id/guidelines_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@color/backgroundWhite">

            <TextView
                android:id="@+id/guidelines_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COPD Dietary Guidelines"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/guidelines_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proper nutrition plays a vital role in managing COPD symptoms and improving overall health."
                android:textSize="16sp"
                android:textColor="@color/textSecondary"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp" />

            <!-- Guidelines Container -->
            <LinearLayout
                android:id="@+id/guidelines_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Consult Text -->
            <TextView
                android:id="@+id/consult_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Always consult with your healthcare provider before making significant changes to your diet."
                android:textSize="14sp"
                android:textColor="@color/textTertiary"
                android:textStyle="italic"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/consult_background"
                android:layout_marginTop="20dp" />

        </LinearLayout>

        <!-- Preventing Exacerbations Section -->
        <LinearLayout
            android:id="@+id/exacerbations_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@color/backgroundBlue"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/section_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preventing COPD Exacerbations"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/section_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Strategies to reduce flare-ups and maintain lung function"
                android:textSize="16sp"
                android:textColor="@color/textTertiary"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/exacerbations_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To prevent COPD exacerbations, it is crucial to take various precautions. Besides performing breathing exercises and engaging in physical activity, maintaining a healthy diet is extremely important for lung function. Specifically, the amount of protein in one's diet can significantly impact lung health. Proper nutrition, combined with regular exercise and respiratory therapies, can help manage COPD and improve patients' quality of life."
                android:textSize="16sp"
                android:textColor="@color/textSecondary"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="20dp" />

            <!-- Strategy Grid -->
            <LinearLayout
                android:id="@+id/strategy_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

        <!-- Protein Section -->
        <LinearLayout
            android:id="@+id/protein_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@color/backgroundWhite"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/protein_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Importance of Protein"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/protein_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Research shows that COPD patients with adequate protein intake have better outcomes. Protein helps maintain respiratory muscle mass and function, which can decline in COPD patients. Aim for 20-30 g protein per meal."
                android:textSize="16sp"
                android:textColor="@color/textSecondary"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Recommended Foods Section -->
        <LinearLayout
            android:id="@+id/foods_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@color/backgroundWhite"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/foods_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recommended Foods for COPD"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/foods_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Making smart food choices can help manage COPD symptoms and improve your overall health."
                android:textSize="16sp"
                android:textColor="@color/textSecondary"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp" />

            <!-- Foods to Embrace -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foods to Embrace"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:id="@+id/foods_embrace_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp" />

            <!-- Foods to Limit -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foods to Limit or Avoid"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:id="@+id/foods_limit_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
